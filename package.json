{
  "name": "email-service",
  "version": "1.0.0",
  "description": "A serverless email service with failover between multiple providers.",
  "main": "src/handlers/send-email-lambda.ts",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "deploy": "serverless deploy",
    "offline": "serverless offline",
    "invoke-local": "serverless invoke local --function sendEmailLambda --path mock-event.json",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.2",
    "aws-sdk": "^2.900.0",
    "mailgun-js": "^0.22.0",
    "serverless": "^4.4.6",
    "serverless-dotenv-plugin": "^3.9.0",
    "serverless-step-functions": "^3.7.0",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.72",
    "@types/jest": "^29.5.13",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "serverless-offline": "^14.3.2",
    "ts-jest": "^29.2.5",
    "typescript": "^4.4.4"
  },
  "author": "Tu Nombre",
  "license": "ISC",
  "directories": {
    "test": "tests"
  }
}
